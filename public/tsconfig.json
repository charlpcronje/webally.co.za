{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"lib": ["ESNext", "DOM"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowJs": true,
		"checkJs": false
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
